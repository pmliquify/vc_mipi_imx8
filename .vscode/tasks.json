{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "type": "shell",
                        "label": "Build Apalis All",
                        "command": "./build.sh",
                        "args": [
                                "apalis",
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}/bin"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                },
                {
                        "type": "shell",
                        "label": "Build Apalis Kernel",
                        "command": "./build.sh",
                        "args": [
                                "apalis",
                                "k"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}/bin"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ]
                },
                {
                        "type": "shell",
                        "label": "Build Apalis Device Tree",
                        "command": "./build.sh",
                        "args": [
                                "apalis",
                                "d"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}/bin"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ]
                },
                {
                        "type": "shell",
                        "label": "Flash to Target",
                        "command": "./flash.sh",
                        "options": {
                                "cwd": "${workspaceFolder}/bin"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ]
                }
        ]
}